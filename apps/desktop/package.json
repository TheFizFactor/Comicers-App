{
  "name": "@comicers/desktop",
  "productName": "comicers",
  "description": "Manga reader and library manager for the desktop",
  "version": "2.17.2",
  "private": true,
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "cd ../../packages/ui && pnpm build && cd ../../apps/desktop && node scripts/copy-ui.js && electron-vite build",
    "start": "electron-vite preview",
    "dist": "npm run build && electron-builder",
    "dist:win": "cross-env ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=1 npm_config_build_from_source=false npm_config_msvs_version=2022 GH_TOKEN=${{ secrets.GITHUB_TOKEN }} pnpm electron-builder --publish always --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux --publish never",
    "lint": "biome lint src"
  },
  "build": {
    "productName": "comicers",
    "appId": "com.comicers.app",
    "asar": true,
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "!**/.turbo/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,yarn-error.log,yarn-debug.log,pnpm-lock.yaml,pnpm-debug.log}"
    ],
    "extraResources": [
      {
        "from": "../../packages/ui/dist",
        "to": "packages/ui/dist",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "nodeGypRebuild": false,
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.entertainment"
    },
    "win": {
      "target": [{
        "target": "nsis",
        "arch": ["x64"]
      }],
      "sign": false,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Comicers"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "Entertainment",
      "artifactName": "${productName}-${version}.${ext}",
      "desktop": {
        "Name": "Comicers",
        "Comment": "Manga reader and library manager",
        "Categories": "Utility;TextEditor;Office;Graphics;Viewer;"
      }
    },
    "publish": {
      "provider": "github",
      "owner": "TheFizFactor",
      "repo": "Comicers-App",
      "releaseType": "draft",
      "vPrefixedTagName": true,
      "private": false
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Comicers"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheFizFactor/Comicers-App"
  },
  "author": {
    "name": "Arnis",
    "email": "fiz@comicers.com",
    "url": "https://comicers.org"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TheFizFactor/Comicers-App/issues"
  },
  "keywords": [
    "manga",
    "manga-reader",
    "comics",
    "electron",
    "react",
    "typescript",
    "ts"
  ],
  "homepage": "https://comicers.org",
  "dependencies": {
    "@comicers/ui": "workspace:*",
    "@radix-ui/react-accordion": "1.2.3",
    "@radix-ui/react-alert-dialog": "1.1.6",
    "@radix-ui/react-checkbox": "1.1.4",
    "@radix-ui/react-collapsible": "1.1.3",
    "@radix-ui/react-context-menu": "2.2.6",
    "@radix-ui/react-dialog": "1.1.6",
    "@radix-ui/react-dropdown-menu": "2.1.6",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-popover": "1.1.6",
    "@radix-ui/react-progress": "1.1.2",
    "@radix-ui/react-radio-group": "1.2.3",
    "@radix-ui/react-scroll-area": "1.2.3",
    "@radix-ui/react-select": "2.1.6",
    "@radix-ui/react-separator": "1.1.2",
    "@radix-ui/react-slider": "1.2.3",
    "@radix-ui/react-slot": "1.1.2",
    "@radix-ui/react-switch": "1.1.3",
    "@radix-ui/react-tabs": "1.1.3",
    "@radix-ui/react-toast": "1.2.6",
    "@radix-ui/react-toggle": "1.1.2",
    "@radix-ui/react-tooltip": "1.1.8",
    "@tanstack/react-table": "8.21.2",
    "@tiyo/common": "1.0.0",
    "aki-plugin-manager": "1.3.3",
    "axios": "1.8.2",
    "bufferutil": "4.0.9",
    "class-variance-authority": "0.7.1",
    "cmdk": "1.0.4",
    "core-js": "3.41.0",
    "date-fns": "3.6.0",
    "discord-rpc": "4.0.1",
    "electron-log": "5.3.2",
    "electron-updater": "4.6.5",
    "form-data": "4.0.2",
    "formdata-node": "4.4.1",
    "history": "5.3.0",
    "html-react-parser": "5.2.2",
    "jsdom": "25.0.1",
    "jszip": "3.10.1",
    "lucide-react": "0.468.0",
    "mousetrap": "1.6.5",
    "node-fetch": "2.7.0",
    "node-unrar-js": "2.0.2",
    "pkce-challenge": "2.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.30.0",
    "react-virtualized-auto-sizer": "1.0.25",
    "react-window": "1.8.11",
    "recoil": "0.7.7",
    "regenerator-runtime": "0.13.11",
    "rimraf": "6.0.1",
    "semver": "7.7.1",
    "source-map-support": "0.5.21",
    "utf-8-validate": "6.0.5",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@types/discord-rpc": "4.0.9",
    "@types/enzyme": "3.10.18",
    "@types/enzyme-adapter-react-16": "1.0.9",
    "@types/history": "4.7.9",
    "@types/jsdom": "20.0.1",
    "@types/mousetrap": "1.6.15",
    "@types/node": "22.8.6",
    "@types/node-fetch": "2.6.12",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "@types/react-router-dom": "5.3.3",
    "@types/react-virtualized-auto-sizer": "1.0.4",
    "@types/react-window": "1.8.8",
    "@types/semver": "7.5.8",
    "@types/uuid": "8.3.4",
    "autoprefixer": "10.4.21",
    "browserslist-config-erb": "0.0.3",
    "cross-env": "^7.0.3",
    "electron": "32.3.3",
    "electron-builder": "25.1.8",
    "electron-debug": "3.2.0",
    "electron-vite": "2.3.0",
    "postcss": "8.5.3",
    "tailwindcss": "3.4.17",
    "typescript": "5.8.2",
    "vite": "5.4.14",
    "vite-plugin-electron-renderer": "0.14.6",
    "vite-plugin-node-polyfills": "0.22.0"
  },
  "optionalDependencies": {
    "dmg-license": "1.0.11",
    "register-scheme": "0.0.2"
  },
  "config": {
    "buildFromSource": false,
    "runtime": "electron",
    "target": "32.3.3",
    "arch": "x64",
    "msvs_version": "2022"
  }
}
